<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="product_form_view_pos_sale_order_button">
        <field name="name">product.product.pos.sale.order</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="sale.product_form_view_sale_order_button"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sales_count']/.." position="attributes">
                <attribute name="name">%(action_product_sale_common_list)d</attribute>
            </xpath>
        </field>
    </record>

</odoo>
    
